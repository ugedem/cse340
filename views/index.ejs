<h1>Welcome to CSE Motors</h1>
<%- messages() %>

<section class="hero" aria-labelledby="hero-title">
  <div class="hero-container">
    <img 
      src="/images/vehicles/delorean.jpg" 
      alt="Delorean car model" 
      class="hero-img"
    >
    <div class="hero-text">
      <h2 id="hero-title">DMC Delorean</h2>
      <ul>
        <li>3 Cup holders</li>
        <li>Superman doors</li>
        <li>Fuzzy dice!</li>
      </ul>
      <button 
        class="button-blue" 
        type="button" 
        aria-label="Own the Delorean today"
      >
        Own Today
      </button>
    </div>
  </div>
</section>

<div class="content">
  <section id="reviews" aria-labelledby="reviews-title">
    <h2 id="reviews-title">DMC Delorean Reviews</h2>
    <ul class="open">
      <li><blockquote>"So fast it's almost like traveling in time." (4/5)</blockquote></li>
      <li><blockquote>"Coolest ride on the road." (4/5)</blockquote></li>
      <li><blockquote>"I'm feeling McFly!" (5/5)</blockquote></li>
      <li><blockquote>"The most futuristic ride of our day." (4.5/5)</blockquote></li>
      <li><blockquote>"80's livin and I love it." (5/5)</blockquote></li>
    </ul>
  </section>

  <section id="upgrades" aria-labelledby="upgrades-title">
    <h2 id="upgrades-title">Delorean Upgrades</h2>
    <div class="upgrades-grid">
      <% 
        const upgrades = [
          { name: "Flux Capacitor", img: "flux-cap.png", price: 299.99 },
          { name: "Flame Decals", img: "flame.jpg", price: 89.99 },
          { name: "Bumper Stickers", img: "bumper_sticker.jpg", price: 4.99 },
          { name: "Hub Caps", img: "hub-cap.jpg", price: 119.99 }
        ]; 
      %>

      <% upgrades.forEach(upgrade => { %>
        <div class="upgrade-card">
          <form action="/cart/add" method="POST">
            <img 
              src="/images/upgrades/<%= upgrade.img %>" 
              alt="Image of <%= upgrade.name %> upgrade"
            >
            <p><%= upgrade.name %></p>
            <input type="hidden" name="name" value="<%= upgrade.name %>">
            <input type="hidden" name="image" value="/images/upgrades/<%= upgrade.img %>">
            <input type="hidden" name="price" value="<%= upgrade.price %>">
            <button 
              type="submit" 
              class="button-blue" 
              aria-label="Add <%= upgrade.name %> to cart"
            >
              Add to Cart
            </button>
          </form>
        </div>
      <% }) %>
    </div>
  </section>
</div>
